# Production Environment Variables
# Copy this to .env and fill in your production values

# MongoDB Configuration (Use MongoDB Atlas for production)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/quicktext-pro?retryWrites=true&w=majority

# Server Configuration
PORT=3000
NODE_ENV=production

# Security Configuration
JWT_SECRET=your-super-secure-random-jwt-secret-key-here-change-this
BCRYPT_ROUNDS=12

# Rate Limiting Configuration (adjust for production load)
RATE_LIMIT_POINTS=50
RATE_LIMIT_DURATION=60

# Content Size Limit
MAX_CONTENT_SIZE=10mb

# CORS Configuration (set to your domain)
CORS_ORIGIN=https://your-domain.com
